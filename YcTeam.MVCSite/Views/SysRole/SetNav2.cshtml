@model IEnumerable<YcTeam.DTO.System.SysNavRoleDto>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" style="width:40% !important">
    <tr>
        <th>序号</th>
        <td>选择</td>
        <th>
            @Html.DisplayNameFor(model => model.NavItemName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NavName)
        </th>
        <th>操作</th>
    </tr>
@{int i = 0;}
@foreach (var item in Model) {
    <tr>
        <td>
            @{i++;}
            @i
        </td>
        <td>
            @Html.CheckBoxFor(modelItem => item.IsChecked)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NavItemName)
            @Html.HiddenFor(modelItem => item.NavItemId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NavName)
            @Html.HiddenFor(modelItem => item.NavId)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {id = item.Id}) |
            @Html.ActionLink("Details", "Details", new {id = item.Id}) |
            @Html.ActionLink("Delete", "Delete", new {id = item.Id})
        </td>
    </tr>
}

</table>
