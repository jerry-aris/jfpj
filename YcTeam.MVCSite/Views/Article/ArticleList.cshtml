@using Webdiyer.WebControls.Mvc
@model Webdiyer.WebControls.Mvc.PagedList<YcTeam.DTO.ArticleDto>

<span class="col-md-1">
    @Html.ActionLink("创建文章", "ArticleCreate")
</span>

<span class="col-md-1">
    @Html.ActionLink("文章类别", "CategoryList")
</span>

<table class="table table-bordered table-hover table-striped">
    <thead></thead>
    <tr>
        <th>
            序号
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryNames)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GoodCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BadCount)
        </th>
        <th>
            操作
        </th>
        <th>
            操作
        </th>
        <th>
            操作
        </th>
    </tr>
    <tbody>
        @{ int i = 0;}
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @(Model.StartItemIndex + i++)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryNames)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GoodCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BadCount)
                </td>
                <td>
                    <a class="btn btn-success btn-xs" href="@Url.Action("ArticleDetails", new {id = item.Id})">
                        <span class="glyphicon-search">详情</span>
                    </a>
                </td>
                <td>
                    <a class="glyphicon glyphicon-pencil" href="@Url.Action("ArticleEdit", new {id = item.Id})"></a>
                </td>
                <td>
                    <a class="glyphicon glyphicon-remove" font-weight: lighter;" href="@Url.Action("ArticleDetails", new {id = item.Id})"></a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="10">
                @Html.Partial("~\\Views\\PageList\\_PageList.cshtml", Model);
            </td>
        </tr>
    </tfoot>
</table>


@section Scripts{@{Html.RegisterMvcPagerScriptResource();}}
@section headers{
    <style>
        table th {
            text-align: center;
        }

        table td {
            text-align: center;
        }

        .pagination {
            display: flex;
            flex-direction: row;
            justify-content: center;
            margin: 0px;
            padding: 3px;
        }
    </style>
}
